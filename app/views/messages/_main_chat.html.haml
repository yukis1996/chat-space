.chat-main
  .chat-main__group-info
    .chat-main__group-info__item
      .chat-main__group-info__item__center
        = @group.name
      .chat-main__group-info__item__bottom
        Member:
        - @group.users.each do |group|
          = group.name
    .chat-main__group-info__edit
      = link_to edit_group_path(@group), class: "edit-btn__link" do
        .chat-main__group-info__edit__btn
          Edit
  .chat-main__message-list
    .messages
      = render @messages
  .chat-main__message-from
    = form_for [@group, @message] do |f|
      .chat-main__message-from__group
        = f.text_field :content, class: 'form__message', placeholder: 'type a message'
        .form__mask
          = f.label :image, class: 'form__mask__image' do
            = icon('fas', 'image', class: 'icon')
            = f.file_field :image, class: 'hidden'
      = f.submit 'Send', class: 'form__submit'